module simple_processor(
    input [7:0] input_a,
    input [7:0] input_b,
    input [1:0] op,
    output reg [15:0] result
);

always @(*)
begin
    case(op)
        2'b00: result = input_a + input_b; // addition
        2'b01: result = input_a - input_b; // subtraction
        2'b10: result = input_a * input_b; // multiplication
        2'b11: result = input_a / input_b; // division
    endcase
end

endmodule
